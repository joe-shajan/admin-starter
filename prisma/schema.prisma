// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // uses connection pooling
}

model User {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  name        String?
  phoneNumber String?
  email       String  @unique
  password    String?
}

enum SectionType {
  IMAGE
  VIDEO
  EMBEDED
}

model Sections {
  id   String      @id @default(auto()) @map("_id") @db.ObjectId
  name String      @unique
  type SectionType
  url  String?
}
